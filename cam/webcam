#!/bin/bash

sudo modprobe uvcvideo
mplayer tv:// -tv driver=v4l2:width=640:height=480:device=/dev/video0 -title Webcam -fps 25 -vf screenshot
sudo modprobe -r uvcvideo


#!/bin/bash

sudo modprobe uvcvideo
mplayer tv:// -tv driver=v4l2:width=320:height=240:device=/dev/video0 -title 'Small Webcam' -fps 25 -vf screenshot
sudo modprobe -r uvcvideo


